<Window x:Class="WpfTaskTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTaskTracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <Label Content="Task title" Margin="0,0,0,5"/>
        <TextBox x:Name="txtTitle"  Margin="0,0,0,5"/>
        <Label Content="Priority (1-5)e" Margin="0,0,0,5"/>
        <TextBox x:Name="txtPriority" Margin="0,0,0,5"/>
        <DatePicker x:Name="dpDeadline" Margin="0,0,0,10"/>
        <Button Content="Add Task" Click="AddTask_Click"/>
        <ListBox x:Name="lstTasks"
         Margin="0,10,0,0"
         Height="120"/>
    </StackPanel>
</Window>
